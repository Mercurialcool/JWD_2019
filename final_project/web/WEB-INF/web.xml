<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>login-page</servlet-name>
        <servlet-class>main.java.by.vasiliuk.servlet.LoginPageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ad-list-page</servlet-name>
        <servlet-class>main.java.by.vasiliuk.servlet.AdListPageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ad-view-page</servlet-name>
        <servlet-class>main.java.by.vasiliuk.servlet.AdViewPageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>main.java.by.vasiliuk.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>profile-page</servlet-name>
        <servlet-class>main.java.by.vasiliuk.servlet.ProfilePageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login-page</servlet-name>
        <url-pattern>/login-page</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ad-list-page</servlet-name>
        <url-pattern>/ad-list-page</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ad-list-page</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ad-view-page</servlet-name>
        <url-pattern>/ad-view-page</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>profile-page</servlet-name>
        <url-pattern>/profile-page</url-pattern>
    </servlet-mapping>


</web-app>